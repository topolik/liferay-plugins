<?xml version="1.0"?>

<portlet-app xmlns="http://java.sun.com/xml/ns/portlet/portlet-app_2_0.xsd" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/portlet/portlet-app_2_0.xsd http://java.sun.com/xml/ns/portlet/portlet-app_2_0.xsd" version="2.0">
	<portlet>
		<portlet-name>OAuth Admin</portlet-name>
		<display-name>OAuth Admin</display-name>
		<portlet-class>
			com.liferay.portlet.oauth.mvc.OAuthApplicationAdminPortlet
		</portlet-class>
		<init-param>
			<name>view-jsp</name>
			<value>/html/admin/view.jsp</value>
		</init-param>
		<init-param>
			<name>config-jsp</name>
			<value>/html/admin/config.jsp</value>
		</init-param>
		<init-param>
			<name>copy-request-parameters</name>
			<value>true</value>
		</init-param>
		<expiration-cache>0</expiration-cache>
		<supports>
			<mime-type>text/html</mime-type>
			<portlet-mode>view</portlet-mode>
			<portlet-mode>config</portlet-mode>
		</supports>
		<resource-bundle>content/Language</resource-bundle>
		<portlet-info>
			<title>OAuth Admin</title>
			<short-title>OAuthAdmin</short-title>
			<keywords></keywords>
		</portlet-info>
		<security-role-ref>
			<role-name>administrator</role-name>
		</security-role-ref>
		<security-role-ref>
			<role-name>oauth-user</role-name>
		</security-role-ref>
		<security-role-ref>
			<role-name>guest</role-name>
		</security-role-ref>
		<security-role-ref>
			<role-name>power-user</role-name>
		</security-role-ref>
		<security-role-ref>
			<role-name>user</role-name>
		</security-role-ref>
	</portlet>
	<portlet>
		<portlet-name>OAuth Authorizations</portlet-name>
		<display-name>OAuth Authorizations</display-name>
		<portlet-class>
			com.liferay.portlet.oauth.mvc.OAuthApplicationAuthorizationPortlet
		</portlet-class>
		<init-param>
			<name>view-jsp</name>
			<value>/html/authorization/view.jsp</value>
		</init-param>
		<init-param>
			<name>config-jsp</name>
			<value>/html/authorization/config.jsp</value>
		</init-param>
		<init-param>
			<name>copy-request-parameters</name>
			<value>true</value>
		</init-param>
		<expiration-cache>0</expiration-cache>
		<supports>
			<mime-type>text/html</mime-type>
			<portlet-mode>view</portlet-mode>
			<portlet-mode>config</portlet-mode>
		</supports>
		<resource-bundle>content/Language</resource-bundle>
		<portlet-info>
			<title>OAuth Authorizations</title>
			<short-title>OAuthAuthorizations</short-title>
			<keywords></keywords>
		</portlet-info>
		<security-role-ref>
			<role-name>administrator</role-name>
		</security-role-ref>
		<security-role-ref>
			<role-name>guest</role-name>
		</security-role-ref>
		<security-role-ref>
			<role-name>power-user</role-name>
		</security-role-ref>
		<security-role-ref>
			<role-name>user</role-name>
		</security-role-ref>
	</portlet>
</portlet-app>