<?xml version="1.0"?>

<beans
        default-destroy-method="destroy"
        default-init-method="afterPropertiesSet"
        xmlns="http://www.springframework.org/schema/beans"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd"
        >

    <!-- Override portal services with portlet implementation -->
    <bean id="com.liferay.portal.kernel.safe.serializer.ItemSerializerRegistryUtil" class="com.liferay.portal.kernel.safe.serializer.ItemSerializerRegistryUtil">
        <property name="itemSerializerRegistry">
            <bean class="com.liferay.portalsafe.serializer.ItemSerializerRegistryImpl" />
        </property>
    </bean>
    <bean id="com.liferay.portal.kernel.safe.PortalSafeUtil" class="com.liferay.portal.kernel.safe.PortalSafeUtil">
        <property name="portalSafe" ref="com.liferay.portalsafe.service.PortalSafeService" />
    </bean>
</beans>